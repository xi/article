{
  "manifest_version": 2,

  "name": "article",
  "description": "try to detect an article and offer to strrip everything else",
  "version": "1.0",

  "background": {
    "scripts": ["bg.js"],
    "persistent": true
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["article.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "article"
  }
}
